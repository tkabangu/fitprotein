{% extends 'base.html.twig' %}

{% block title 'Tous nos produits' %}
{% block body %}
    <div class="jumbotron">
      <div class="container">
          {{ form_start(form) }}
          <div class="form-row">
              <div class="col">
                  {{ form_row(form.maxPrice) }}
              </div>
              <div class="col">
                  <button class="btn btn-primary">Rechercher</button>
              </div>
          </div>
          {{ form_end(form) }}
      </div>
    </div>
    <div class="container mt-4">

        <h3>Voir tous nos produits</h3>
        <p>La meilleure Whey Protéine du marché (classement INC).
            Atteignez vos Objectifs ! Le plus large choix de Whey Protéine en Stock + Livraison Possible.
            Découvrez nos Marques.</p>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                {% include 'product/_product.html.twig' %}
                </div>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(products) }}
        </div>
    </div>

{% endblock %}



