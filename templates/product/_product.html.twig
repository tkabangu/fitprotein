<div class="single-product-item col-lg-4 col-md-6 col-sm-12 text-center">
    <div class="img-holder">
        {% if product.picture%}
            <img style="width:170px" src="{{ '/images/products/'~product.picture.filename }}" class="" alt="">
        {% else %}
            <img src="{{ '/images/products/empty.jpg' }}" alt="no-image" width="170">

        {% endif %}
    </div>
    <div class="title-holder text-center">
        <div class="static-content">
            <h3 class="title text-center"><a href="{{ path('product.show', {slug: product.slug, id: product.id}) }}"> {{ product.title }}</a></h3>
            <span class="price"><span class="amount"><span class=""></span> {{ product.price }}</span> € </span>
            <p><small>réduction de {{ product.discount }} %</small></p>
        </div>
        <div class="overlay-content">
            <ul class="clearfix">
                <li>
                    <a href="{{ path('product.show', {slug: product.slug, id: product.id}) }}"
                       class="" data-name="{{ product.title }}" data-price="{{ product.price }}">
                        <span class="fa fa-shopping-cart"></span>
                        <div class="toltip-content">
                            <p>Add to Cart</p>
                        </div>
                    </a>




                </li>
                <li>
                    <a href="{{ path('product.show', {slug: product.slug, id: product.id}) }}" class=""><span class="fa fa-heart"></span>
                        <div class="toltip-content">
                            <p>Add Whishlist</p>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="{{ '/images/products/'~product.picture.filename }}" class="lightbox-image" data-fancybox="shop-gallery"><span class="fa fa-expand"></span>
                        <div class="toltip-content">
                            <p>Zoom In</p>
                        </div>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

