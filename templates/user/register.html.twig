{% extends 'base.html.twig' %}

{% block body %}
 <div class="container center">
     <h2>Inscription</h2>

     {{ form_start(form) }}

     {{ form_row(form.lastname) }}
     {{ form_row(form.firstname) }}
     {{ form_row(form.email) }}
     {{ form_row(form.plainPassword) }}

     <div class="text-right">
         <button type="submit" class="btn btn-primary">
             S'inscrire
         </button>
     </div>

 </div>


    {{ form_end(form) }}
{% endblock %}