{{ form_start(form) }}
<div class="row">
    <div class="col md-4">{{ form_row(form.lastname) }}</div>
    <div class="col md-4">{{ form_row(form.firstname) }}</div>
    <div class="col md-4">{{ form_row(form.email) }}</div>
    <div class="col md-4">{{ form_row(form.phone) }}</div>
</div>
<div class="row">
    <div class="col md-4">{{ form_row(form.subject) }}</div>
</div>

{{ form_widget(form)}}
<button class="btn-primary">{{ button|default ('Enregistrer') }}</button>
{{ form_end(form) }}