{{ form_start(form) }}
<div class="row">
    <div class="col md-2">{{ form_row(form.civility) }}</div>
    <div class="col md-4">{{ form_row(form.first_name) }}</div>
    <div class="col md-4">{{ form_row(form.last_name) }}</div>
    <div class="col md-4">{{ form_row(form.address) }}</div>
    <div class="col md-4">{{ form_row(form.zip_code) }}</div>
    <div class="col md-4">{{ form_row(form.city) }}</div>
</div>
<div class="row">
    <div class="col md-4">{{ form_row(form.email) }}</div>
    <div class="col md-4">{{ form_row(form.password) }}</div>
    <div class="col md-2">{{ form_row(form.roles) }}</div>
</div>


{{ form_widget(form)}}
<button class="btn-primary">{{ button|default ('Enregistrer') }}</button>
{{ form_end(form) }}